<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:prefix="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="horizontal"
android:weightSum="3">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewColumn1"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        prefix:cardCornerRadius="1dp">

        <ImageView
            android:id="@+id/countryImageColumn1"
            android:src="@drawable/noflag"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="centerInside"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/countryNameColumn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:padding="16dp"
            android:focusable="true"
            android:clickable="true"
            android:textSize="25dp"
            android:text="CardView1"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewColumn2"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        prefix:cardCornerRadius="1dp">

        <ImageView
            android:id="@+id/countryImageColumn2"
            android:src="@drawable/noflag"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="centerInside"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/countryNameColumn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:padding="16dp"
            android:focusable="true"
            android:clickable="true"
            android:textSize="25dp"
            android:text="CardView2"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewColumn3"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        prefix:cardCornerRadius="1dp">

        <ImageView
            android:id="@+id/countryImageColumn3"
            android:src="@drawable/noflag"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="centerInside"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/countryNameColumn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:padding="16dp"
            android:focusable="true"
            android:clickable="true"
            android:textSize="25dp"
            android:text="CardView3"/>

    </android.support.v7.widget.CardView>

</LinearLayout>